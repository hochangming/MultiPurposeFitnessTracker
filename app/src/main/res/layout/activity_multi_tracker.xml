<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/textAge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="101dp"
        android:text="Sets:"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="46dp"
        android:src="@drawable/log"
        android:scaleX="0.8"
        android:scaleY="0.8"/>

    <RadioGroup
        android:id="@+id/radiogrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heightInput"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/heightInput"
        android:orientation="horizontal"/>

    <Button
        android:id="@+id/addData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="238dp"
        android:text="Add data"
        tools:ignore="RelativeOverlap" />

    <EditText
        android:id="@+id/nameText_"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="13sp"
        android:textColor="@color/yellow"/>

    <EditText
        android:id="@+id/setsInput"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/yellow"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/RepsInput"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="13sp"
        android:textColor="@color/yellow"/>

    <EditText
        android:id="@+id/TimeTakenInput"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/yellow"
        android:textSize="13sp" />


    <TextView
        android:layout_width="113dp"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="36dp"
        android:text="Workout Tracker"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="180dp"
        android:text="Time taken:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="140dp"
        android:text="Reps:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/texttname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="56dp"
        android:text="Workout Name:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="101dp"
        android:text="Sets:"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="60dp"
        android:text="Reset"
        android:textSize="12sp"></Button>


</RelativeLayout>