<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical">


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:text="0"
            android:textColor="@color/yellow" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:text="1 - 2"
            android:textColor="@color/yellow" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:text="3 - 5"
            android:textColor="@color/yellow" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:text="6 - 7"
            android:textColor="@color/yellow" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radiogrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heightInput"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/heightInput"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:text="Male"
            android:textColor="@color/yellow" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:text="Female"
            android:textColor="@color/yellow" />
    </RadioGroup>

    <Button
        android:id="@+id/viewhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="149dp"
        android:text="view history"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/addCalorieData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogrp"
        android:layout_alignEnd="@+id/radiogrp"
        android:layout_alignParentEnd="true"
        android:text="@string/generate_data" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/yellow"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/ageInput"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/yellow"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/heightInput"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="135dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/yellow"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="175dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/yellow"
        android:textSize="13sp" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="98dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="1dp"
        android:text="Track your Calories"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="221dp"
        android:text="Enter Active days"
        android:textColor="@color/yellow" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="85dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="299dp"
        android:layout_marginEnd="86dp"
        android:text="Gain Weight"
        android:textColor="@color/yellow" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="45dp"
        android:layout_height="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="180dp"
        android:text="Weight:"
        android:textColor="@color/yellow" />

    <TextView
        android:id="@+id/displayValue"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="326dp"
        android:textColor="@color/yellow"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/displayValue1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="325dp"
        android:textColor="@color/yellow"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/displayValue2"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="237dp"
        android:layout_marginTop="326dp"
        android:textColor="@color/yellow"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="105dp"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="299dp"
        android:text="Maintain Weight"
        android:textColor="@color/yellow" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="75dp"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:text="Cut Weight"
        android:textColor="@color/yellow" />


    <TextView
        android:id="@+id/textHeight"
        android:layout_width="45dp"
        android:layout_height="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="140dp"
        android:text="Height:"
        android:textColor="@color/yellow" />

    <TextView
        android:id="@+id/texttname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="53dp"
        android:text="Name:"
        android:textColor="@color/yellow" />

    <TextView
        android:id="@+id/textAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="99dp"
        android:text="Age:"
        android:textColor="@color/yellow" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="2dp"
        android:text="Reset"
        android:textSize="12sp"></Button>


</RelativeLayout>